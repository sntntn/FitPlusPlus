{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConsulConfig": {
    "Address": "http://consul:8500",
    "ServiceName": "GatewayService.API",
    "ServiceId": "GatewayService.API-1",
    "ServiceAddress": "http://localhost",
    "ServicePort": 8080
  },
  "Ocelot": {
    "Routes": [
      {
        "DownstreamPathTemplate": "/api/{version}/{everything}",
        "DownstreamScheme": "http",
        "DownstreamHostAndPorts": [
          {
            "Host": "ClientService.API"
          }
        ],
        "UpstreamPathTemplate": "/api/{version}/client/{everything}",
        "UpstreamHttpMethod": [ "GET", "POST", "PUT" ]
      }
    ],
    "GlobalConfiguration": {
      "ServiceDiscoveryProvider": {
        "Host": "consul",
        "Port": 8500,
        "Type": "Consul"
      }
    }
  }
}
